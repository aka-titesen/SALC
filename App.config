<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>

    <!-- Connection Strings -->
    <connectionStrings>
        <add name="SALCDatabase"
             connectionString="Server=localhost;Database=SALC;Integrated Security=true;Connection Timeout=30;"
             providerName="System.Data.SqlClient" />
    </connectionStrings>

    <!-- Application Settings -->
    <appSettings>
        <!-- Application Configuration -->
        <add key="ApplicationTitle" value="Sistema de Administracion de Laboratorio Clinico (SALC)" />
        <add key="ApplicationVersion" value="2.7" />

        <!-- UI Configuration -->
        <add key="DefaultDateFormat" value="dd/MM/yyyy" />
        <add key="DefaultDateTimeFormat" value="dd/MM/yyyy HH:mm" />

        <!-- File Paths -->
    <add key="InformesPath" value="C:\SALC\Informes" />
        <add key="BackupPath" value="C:\SALC\Backups" />
        <add key="LogFilePath" value="C:\SALC\Logs\salc.log" />

        <!-- Database Configuration -->
        <add key="DatabaseCommandTimeout" value="30" />

        <!-- Logging Configuration -->
        <add key="LoggingEnabled" value="true" />
        <add key="LogLevel" value="Info" />
        <add key="DebugMode" value="false" />

        <!-- Session Configuration -->
        <add key="SessionTimeoutMinutes" value="60" />

        <!-- Email Configuration -->
        <add key="SmtpServer" value="smtp.gmail.com" />
        <add key="SmtpPort" value="587" />
        <add key="SmtpUseSsl" value="true" />
        <add key="SenderEmail" value="noreply@salc.com" />

        <!-- Security Configuration -->
        <add key="PasswordMinLength" value="6" />
        <add key="SessionTokenExpiration" value="3600" />
    </appSettings>

    <!-- Runtime Configuration -->
    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <!-- Assembly redirects if needed -->
        </assemblyBinding>
    </runtime>

    <!-- System.Data Configuration -->
    <system.data>
        <DbProviderFactories>
            <remove invariant="System.Data.SqlClient" />
            <add name="SqlClient Data Provider"
                 invariant="System.Data.SqlClient"
                 description=".Net Framework Data Provider for SqlServer"
                 type="System.Data.SqlClient.SqlClientFactory, System.Data, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
        </DbProviderFactories>
    </system.data>
</configuration>
