<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>
	<connectionStrings>
		<!-- 
    Asegúrate de que 'Data Source' apunte a tu instancia local de SQL Server.
    Puede ser:
    - (local) 
    - localhost
    - localhost\SQLEXPRESS (si usas SQL Server Express con nombre de instancia)
    - .\SQLEXPRESS
    - El nombre de tu servidor si es diferente
    -->
		<add name="SALCConnection" connectionString="Data Source=(local);Initial Catalog=SALC;Integrated Security=True" providerName="System.Data.SqlClient" />
		<!-- 
    Si usas SQL Server Authentication (usuario/contraseña), la cadena sería algo como:
    <add name="SALCConnection" connectionString="Data Source=(local);Initial Catalog=SALC;User ID=TuUsuario;Password=TuContraseña;" providerName="System.Data.SqlClient" />
    -->
	</connectionStrings>
</configuration>