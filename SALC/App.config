<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>
	<connectionStrings>
		<!-- Autenticación de Windows a tu instancia SQLEXPRESS (usa UNA sola barra invertida) -->
		<add name="SALCConnection"
			 connectionString="Data Source=.\SQLEXPRESS;Initial Catalog=SALC;Integrated Security=True;TrustServerCertificate=True"
			 providerName="System.Data.SqlClient" />
		<!-- Alternativas correctas (una sola barra invertida):
		<add name="SALCConnection" connectionString="Data Source=localhost\SQLEXPRESS;Initial Catalog=SALC;Integrated Security=True;TrustServerCertificate=True" providerName="System.Data.SqlClient" />
		<add name="SALCConnection" connectionString="Data Source=.\SQLEXPRESS;Initial Catalog=SALC;Integrated Security=True;TrustServerCertificate=True" providerName="System.Data.SqlClient" />
		-->
	</connectionStrings>
</configuration>